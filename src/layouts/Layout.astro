---
interface Props {
	title: string;
}

import Header from '../sections/Header.astro';
import Footer from '../sections/Footer.astro';


const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portafolio personal" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>

	:root {
		/* Fonts*/
		--primaryFont: 'Unbounded Variable', sans-serif;
		--secondaryFont: 'Montserrat Variable', sans-serif;


		/* Colors*/
		--primary: #3D5AFE;	/* Resaltado*/
		--secondary: #FFD600;			/* Acento;*/
		--tertiary: #64FFDA;			/* Enlace;*/
		--dark: #1E1E1E;			/* Fondo;*/
		--white: #FFFFFF;			/* Texto;*/
		--black: #000000;
	}

	*, *::before, *::after {
		box-sizing: border-box;
	}

	html {
		font-size: 16px;
		scrollbar-width: none;
		scrollbar-color: var(--tertiary) var(--dark);

		scroll-behavior: smooth;
	}

	body {
		margin: 0;
		padding: 0;
		font-family: var(--secondaryFont);

		background-color: var(--dark);
	}

	h1, h2, h3, h4, h5, h6, p{
		margin: 0;
		color: var(--white);
	}

	ul, ol {
		padding: 0;
		margin: 0;
		list-style: none;
	}

	a {
		text-decoration: none;
	}

	.container{
		max-width: 85%;
		margin: 0 auto;

	}

	@media (width <= 768px) {
		.container{
			max-width: 95%;
			margin: 0 auto;

		}
	}

	.no-scroll{
		overflow: hidden;
	}
	
</style>
