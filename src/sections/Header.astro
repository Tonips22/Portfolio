---
import Arrow from "../components/Arrow.astro";
---

<header>
    <nav class="navigation">
        <a href="#projects">Proyects</a>
        <a href="#skills">Skills</a>
        <a href="#about">About Me</a>
        <div class="languages">
            <button class="main-language" aria-expanded="true" aria-haspopup="true">
                <img src="./bandera-espana.svg" alt="flag image">
                Espa√±ol
                <i class="fa-solid fa-chevron-down"></i>
            </button>

            <ul>
                <li>
                    <a class="second-language" href="">
                        <img src="./bandera-reino.svg" alt="flag image">
                        English
                    </a>
                </li>
            </ul>

        </div>
    </nav>

    <a class="CV" target="_blank" href="./CurriculumAGT.pdf">Download CV</a>
    
</header>

<Arrow/>

<style>
    header{
        position: fixed;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-around;

        width: 100%;
        margin: 0 auto;
        padding: 20px;
        z-index: 999;

        animation: scroll-blur ease-in-out both;
        animation-timeline: scroll();
        animation-range: entry 50px cover 100px;
    }

    @keyframes scroll-blur{
        from{
            backdrop-filter: none;
        }

        to{
            backdrop-filter: blur(15px);
            background-color: #0000003c;
        }
    }

    @keyframes fade-in-up{
        from{
            opacity: 0;
            transform: translateY(20px);
        }

        to{
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (width <= 768px) {
        header{
            display: none;
        }
    }

    .logo{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .navigation{
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        gap: 20px;

        animation: fade-in-up 0.5s ease-in-out forwards;

        a{
            color: var(--white);
            padding: 10px 20px;
            border-radius: 5px;

            transition: color ease .3s, background-color ease-in-out .3s;

        }
        a:hover{
            color: var(--dark);
            background-color: var(--white);
        }
    }

    .languages{
        position: relative;

        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;

        ul{
            position: absolute;

            bottom: -50px;
            width: 100%;
            padding-top: 50px;

            display: none;
        }
    }

    .languages:hover{
        ul{
            display: block;
            z-index: -1;
        }
    }


    .main-language, .second-language{
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;

        gap: 5px;

        background-color: #ffffff20;
        backdrop-filter: blur(5px);

        padding: 10px 20px;
        border-radius: 5px;
        color: var(--white);

        font-size: 1rem;

        border: none;
        outline: none;
        cursor: pointer;

        transition: color ease .3s, background-color ease-in-out .3s;

        img{
            max-width: 20px;
            height: auto;
            border-radius: 2px;
        }

        i{
            font-size: 10px;
        }
    }

    .languages:hover{

        .main-language{
                background-color: var(--white);
            color: var(--dark);
        }

        .fa-chevron-down{
            rotate: 180deg;
        }
    }

    .fa-chevron-down{
        transition: rotate ease .3s;
    }

    .second-language{
        animation: fade-in-down .3s ease both;
    }

    @keyframes fade-in-down{
        from{
            opacity: 0;
            transform: translateY(-10px);
        }

        to{
            opacity: 1;
            transform: translateY(0);
        }
    }

    .CV{
        border-radius: 5px;
        padding: 10px 20px;
        color: var(--dark);
        background-color: var(--white);

        transition: background-color .3s ease;
        animation: fade-in-up 0.5s ease-in-out forwards;


        &:hover{
            background-color: var(--tertiary);
        }
    }
</style>